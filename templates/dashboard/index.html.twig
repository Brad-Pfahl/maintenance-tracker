{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-6">Dashboard</h1>

    <div class="space-x-4">
        <a href="{{ path('app_vehicle_new') }}" class="btn btn-primary">Add Vehicle</a>
        <a href="{{ path('app_maintenance_record_new') }}" class="btn btn-secondary">Add Maintenance</a>
    </div>

    <!-- Filter Form -->
    <form method="get" class="mb-6 grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label class="block text-sm text-muted mb-1">Vehicle</label>
            <select name="vehicle" class="w-full border rounded px-3 py-2">
                <option value="">All Vehicles</option>
                {% for vehicle in vehicles %}
                    <option value="{{ vehicle.id }}" {% if filters.vehicleId == vehicle.id %}selected{% endif %}>
                        {{ vehicle.make }} {{ vehicle.model }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label class="block text-sm text-muted mb-1">From</label>
            <input type="date" name="from" value="{{ filters.fromDate }}" class="w-full border rounded px-3 py-2">
        </div>

        <div>
            <label class="block text-sm text-muted mb-1">To</label>
            <input type="date" name="to" value="{{ filters.toDate }}" class="w-full border rounded px-3 py-2">
        </div>

        <div class="flex items-end">
            <button class="bg-accent text-white px-4 py-2 rounded hover:bg-accent-dark w-full">Filter</button>
        </div>
    </form>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-sm text-muted uppercase mb-2">Total Vehicles</h2>
            <p class="text-3xl font-bold text-accent">{{ vehicleCount }}</p>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-sm text-muted uppercase mb-2">Maintenance Records</h2>
            <p class="text-3xl font-bold text-green-600">{{ recordCount }}</p>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-sm text-muted uppercase mb-2">Last Service</h2>
            {% if lastService %}
                <p class="text-xl font-medium text-muted">{{ lastService|date('Y-m-d') }}</p>
            {% else %}
                <p class="text-muted">No records yet</p>
            {% endif %}
        </div>
    </div>

    <!-- Upcoming Maintenance -->
    <h2 class="text-xl font-semibold mt-10 mb-4">Upcoming Maintenance</h2>
    <ul class="bg-white shadow rounded-lg p-6 divide-y divide-gray-100">
        {% for record in upcomingRecords %}
            <li class="py-2">
                <strong>{{ record.date|date('Y-m-d') }}</strong> â€”
                {{ record.type == 'Other' ? record.otherType : record.type }} for
                <em>{{ record.vehicle.make }} {{ record.vehicle.model }}</em>
            </li>
        {% else %}
            <li class="text-muted">No upcoming services found.</li>
        {% endfor %}
    </ul>

    <!-- Filtered Record Table -->
    <h2 class="text-xl font-semibold mt-10 mb-4">Filtered Maintenance Records</h2>
    <div class="overflow-x-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-background">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase">Mileage</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase">Vehicle</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase">Notes</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for record in records %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">{{ record.date|date('Y-m-d') }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{ record.type == 'Other' ? record.otherType : record.type }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ record.mileage }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ record.vehicle.make }} {{ record.vehicle.model }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-muted">{{ record.notes|default('-') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-muted">No records found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

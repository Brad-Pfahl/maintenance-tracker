{% extends 'base.html.twig' %}

{% block title %}Welcome to Maintenance Tracker{% endblock %}

{% block body %}
    <section class="min-h-[70vh] flex flex-col justify-center items-center text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-accent mb-4">Vehicle Maintenance Tracker</h1>
        <p class="text-muted text-lg max-w-xl mb-8">
            Track your vehicle’s service history, upcoming maintenance, and stay organized — all in one place.
        </p>

        {% if app.user %}
            <a href="{{ path('app_dashboard') }}" class="bg-accent text-white px-6 py-3 rounded hover:bg-accent-dark transition">
                Go to Dashboard
            </a>
        {% else %}
            <div class="space-x-4">
                <a href="{{ path('app_register') }}" class="bg-green-600 text-white px-6 py-3 rounded hover:bg-green-700 transition">
                    Get Started
                </a>
                <a href="{{ path('app_login') }}" class="text-accent font-semibold hover:underline">
                    Login
                </a>
            </div>
        {% endif %}
    </section>
{% endblock %}

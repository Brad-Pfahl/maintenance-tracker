{% extends 'base.html.twig' %}

{% block title %}My Vehicles{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-6">My Vehicles</h1>

    <a href="{{ path('app_vehicle_new') }}" class="mb-4 inline-block bg-accent text-white px-4 py-2 rounded hover:bg-accent-dark transition">
        Add New Vehicle
    </a>

    <div class="overflow-x-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-background">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase tracking-wider">Make</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase tracking-wider">Model</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase tracking-wider">Year</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted uppercase tracking-wider">VIN</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-muted uppercase tracking-wider">Actions</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            {% for vehicle in vehicles %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">{{ vehicle.make }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ vehicle.model }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ vehicle.year }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ vehicle.vin }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right space-x-2">
                        <a href="{{ path('app_vehicle_show', {id: vehicle.id}) }}" class="text-accent hover:underline">View</a>
                        <a href="{{ path('app_vehicle_edit', {id: vehicle.id}) }}" class="text-accent hover:underline">Edit</a>
                        {{ include('vehicle/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-muted">No vehicles found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

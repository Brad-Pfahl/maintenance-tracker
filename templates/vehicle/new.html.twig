{% extends 'base.html.twig' %}

{% block title %}Add Vehicle{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-4">Add a New Vehicle</h1>

    {{ form_start(form) }}

    <div class="space-y-4">
        {% for field in form %}
            <div>
                {{ form_label(field, null, { label_attr: { class: 'block text-sm font-medium text-muted' } }) }}
                {{ form_widget(field, { attr: { class: 'mt-1 block w-full rounded-md border-primary-light shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' } }) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}
    </div>

    <div class="mt-6">
        <button class="bg-accent text-white px-4 py-2 rounded hover:bg-accent-dark transition">
            Save Vehicle
        </button>
    </div>

    {{ form_end(form) }}
{% endblock %}

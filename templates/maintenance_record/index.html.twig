{% extends 'base.html.twig' %}

{% block title %}Maintenance History{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-6">Maintenance Records</h1>

    <a href="{{ path('app_maintenance_record_new') }}" class="mb-4 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
        Add Maintenance Record
    </a>

    <div class="overflow-x-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mileage</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vehicle</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            {% for record in maintenance_records %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">{{ record.date|date('Y-m-d') }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{ record.type == 'Other' ? record.otherType : record.type }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ record.mileage }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ record.vehicle.make }} {{ record.vehicle.model }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">{{ record.notes|default('-') }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right space-x-2">
                        <a href="{{ path('app_maintenance_record_show', {id: record.id}) }}" class="text-blue-600 hover:underline">View</a>
                        <a href="{{ path('app_maintenance_record_edit', {id: record.id}) }}" class="text-yellow-600 hover:underline">Edit</a>
                        {{ include('maintenance_record/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-4 text-center text-gray-500">No maintenance records found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
